      </a>
    </div>
  </div>
</nav>

<script>
  document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu?.classList.toggle('hidden');
  });
</script>
