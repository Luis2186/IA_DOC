---
// Modern Navbar component
---

<nav class="fixed top-0 w-full bg-white/95 backdrop-blur-md border-b border-primary-200 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2 group">
          <div class="w-8 h-8 bg-gradient-to-br from-accent-500 to-neural-500 rounded-lg flex items-center justify-center transform group-hover:scale-110 transition-transform duration-200">
            <span class="text-white font-bold text-sm">AI</span>
          </div>
          <span class="text-xl font-bold bg-gradient-to-r from-primary-900 to-primary-700 bg-clip-text text-transparent">
            IA Docs
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="flex items-center space-x-1">
          <a href="/fundamentos/que-es-la-ia" 
             class="px-4 py-2 text-sm font-medium text-primary-700 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200 relative group">
            Fundamentos
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-accent-500 to-neural-500 group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="/machine-learning/introduccion" 
             class="px-4 py-2 text-sm font-medium text-primary-700 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200 relative group">
            Machine Learning
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-accent-500 to-neural-500 group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="/deep-learning/arquitecturas" 
             class="px-4 py-2 text-sm font-medium text-primary-700 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200 relative group">
            Deep Learning
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-accent-500 to-neural-500 group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="/nlp/introduccion" 
             class="px-4 py-2 text-sm font-medium text-primary-700 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200 relative group">
            NLP
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-accent-500 to-neural-500 group-hover:w-full transition-all duration-300"></span>
          </a>
        </div>
      </div>

      <!-- Search and Theme Toggle -->
      <div class="hidden md:flex items-center space-x-4">
        <!-- Search Button -->
        <button class="p-2 text-primary-600 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        
        <!-- GitHub Link -->
        <a href="#" class="p-2 text-primary-600 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" 
                class="p-2 text-primary-600 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200"
                id="mobile-menu-button">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-4 py-4 space-y-2 bg-white border-t border-primary-200">
      <a href="/fundamentos/que-es-la-ia" 
         class="block px-4 py-3 text-base font-medium text-primary-700 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200">
        Fundamentos
      </a>
      <a href="/machine-learning/introduccion" 
         class="block px-4 py-3 text-base font-medium text-primary-700 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200">
        Machine Learning
      </a>
      <a href="/deep-learning/arquitecturas" 
         class="block px-4 py-3 text-base font-medium text-primary-700 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200">
        Deep Learning
      </a>
      <a href="/nlp/introduccion" 
         class="block px-4 py-3 text-base font-medium text-primary-700 hover:text-accent-600 hover:bg-primary-50 rounded-lg transition-all duration-200">
        NLP
      </a>
    </div>
  </div>
</nav>

<script>
  document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu?.classList.toggle('hidden');
  });
</script>
