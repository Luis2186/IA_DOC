          <li>
            <a href="/nlp/embeddings" 
               class={`group flex items-center px-3 py-2 text-sm rounded-lg transition-all duration-200 ${
                 currentPath === '/nlp/embeddings' 
                 ? 'bg-gradient-to-r from-accent-500 to-neural-500 text-white shadow-lg' 
                 : 'text-primary-700 hover:bg-primary-50 hover:text-accent-600'
               }`}>
              <span class="mr-2 opacity-60">•</span>
              Embeddings
            </a>
          </li>
          <li>
            <a href="/nlp/rag" 
               class={`group flex items-center px-3 py-2 text-sm rounded-lg transition-all duration-200 ${
                 currentPath === '/nlp/rag' 
                 ? 'bg-gradient-to-r from-accent-500 to-neural-500 text-white shadow-lg' 
                 : 'text-primary-700 hover:bg-primary-50 hover:text-accent-600'
               }`}>
              <span class="mr-2 opacity-60">•</span>
              RAG
            </a>
          </li>
          <li>
            <a href="/nlp/chatbots" 
               class={`group flex items-center px-3 py-2 text-sm rounded-lg transition-all duration-200 ${
                 currentPath === '/nlp/chatbots' 
                 ? 'bg-gradient-to-r from-accent-500 to-neural-500 text-white shadow-lg' 
                 : 'text-primary-700 hover:bg-primary-50 hover:text-accent-600'
               }`}>
              <span class="mr-2 opacity-60">•</span>
              Chatbots
            </a>
          </li>
        </ul>
      </div>

    </div>
    
    <!-- Footer -->
    <div class="mt-12 pt-6 border-t border-primary-200">
      <div class="text-center">
        <p class="text-xs text-primary-500">Documentación IA</p>
        <p class="text-xs text-primary-400 mt-1">v1.0.0</p>
      </div>
    </div>
  </div>
</aside>
