---
// Modern Sidebar component
export interface Props {
  currentPath?: string;
}

const { currentPath } = Astro.props;
---

<aside class="w-64 bg-white border-r border-primary-200 h-screen overflow-y-auto sticky top-16 shadow-sm">
  <div class="p-6">
    <!-- Search Bar -->
    <div class="mb-8">
      <div class="relative">
        <input type="text" 
               placeholder="Buscar..." 
               class="w-full pl-10 pr-4 py-2 text-sm bg-primary-50 border border-primary-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-all duration-200">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="w-4 h-4 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="space-y-8">
      
      <!-- Fundamentos Section -->
      <div class="sidebar-section">
        <div class="flex items-center mb-4">
          <div class="w-6 h-6 bg-gradient-to-br from-blue-500 to-blue-600 rounded-md flex items-center justify-center mr-3">
            <span class="text-white text-xs font-bold">F</span>
          </div>
          <h3 class="text-sm font-semibold text-primary-900 uppercase tracking-wide">Fundamentos</h3>
        </div>
        <ul class="space-y-1 ml-9">
          <li>
            <a href="/fundamentos/que-es-la-ia" 
               class={`group flex items-center px-3 py-2 text-sm rounded-lg transition-all duration-200 ${
                 currentPath === '/fundamentos/que-es-la-ia' 
                 ? 'bg-gradient-to-r from-accent-500 to-neural-500 text-white shadow-lg' 
                 : 'text-primary-700 hover:bg-primary-50 hover:text-accent-600'
               }`}>
              <span class="mr-2 opacity-60">•</span>
              ¿Qué es la IA?
            </a>
          </li>
          <li>
            <a href="/fundamentos/historia" 
               class={`group flex items-center px-3 py-2 text-sm rounded-lg transition-all duration-200 ${
                 currentPath === '/fundamentos/historia' 
                 ? 'bg-gradient-to-r from-accent-500 to-neural-500 text-white shadow-lg' 
                 : 'text-primary-700 hover:bg-primary-50 hover:text-accent-600'
               }`}>
              <span class="mr-2 opacity-60">•</span>
              Historia
            </a>
          </li>
          <li>
            <a href="/fundamentos/ramas" 
               class={`group flex items-center px-3 py-2 text-sm rounded-lg transition-all duration-200 ${
                 currentPath === '/fundamentos/ramas' 
                 ? 'bg-gradient-to-r from-accent-500 to-neural-500 text-white shadow-lg' 
                 : 'text-primary-700 hover:bg-primary-50 hover:text-accent-600'
               }`}>
              <span class="mr-2 opacity-60">•</span>
              Ramas
            </a>
          </li>
        </ul>
      </div>

      <!-- Machine Learning Section -->
      <div class="sidebar-section">
        <div class="flex items-center mb-4">
          <div class="w-6 h-6 bg-gradient-to-br from-green-500 to-emerald-600 rounded-md flex items-center justify-center mr-3">
            <span class="text-white text-xs font-bold">ML</span>
          </div>
          <h3 class="text-sm font-semibold text-primary-900 uppercase tracking-wide">Machine Learning</h3>
        </div>
        <ul class="space-y-1 ml-9">
          <li>
            <a href="/machine-learning/introduccion" 
               class={`group flex items-center px-3 py-2 text-sm rounded-lg transition-all duration-200 ${
                 currentPath === '/machine-learning/introduccion' 
                 ? 'bg-gradient-to-r from-accent-500 to-neural-500 text-white shadow-lg' 
                 : 'text-primary-700 hover:bg-primary-50 hover:text-accent-600'
               }`}>
              <span class="mr-2 opacity-60">•</span>
              Introducción
            </a>
          </li>
          <li>
            <a href="/machine-learning/ciclo-de-vida" 
               class={`group flex items-center px-3 py-2 text-sm rounded-lg transition-all duration-200 ${
                 currentPath === '/machine-learning/ciclo-de-vida' 
                 ? 'bg-gradient-to-r from-accent-500 to-neural-500 text-white shadow-lg' 
                 : 'text-primary-700 hover:bg-primary-50 hover:text-accent-600'
               }`}>
              <span class="mr-2 opacity-60">•</span>
              Ciclo de Vida
            </a>
          </li>
          <li>
            <a href="/machine-learning/integracion-en-software" 
               class={`group flex items-center px-3 py-2 text-sm rounded-lg transition-all duration-200 ${
                 currentPath === '/machine-learning/integracion-en-software' 
                 ? 'bg-gradient-to-r from-accent-500 to-neural-500 text-white shadow-lg' 
                 : 'text-primary-700 hover:bg-primary-50 hover:text-accent-600'
               }`}>
              <span class="mr-2 opacity-60">•</span>
